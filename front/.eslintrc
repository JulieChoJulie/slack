{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
  },
  "extends": [
      "eslint:recommended", 
      "plugin:react/recommended"
  ],
  "plugins": [
      "import",
      "react-hooks"
  ],
  "rules": {
      "object-curly-newline": 0,
      "react/react-in-jsx-scope": "off",
      "no-param-reassign": "off"
  },
  "env": {
      "browser": true,
      "node": true,
      "es6": true
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/no-unused-vars": [2, { "args": "none" }]
      }
    }
  ]
}